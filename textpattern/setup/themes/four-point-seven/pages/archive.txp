<!DOCTYPE html>
<html lang="<txp:lang />" dir="<txp:text item="lang_dir" />">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no, viewport-fit=cover">
    <title><txp:page_title /></title>

    <!-- Google font API -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=PT+Serif:400,400i,700,700i&amp;subset=latin-ext">

    <!-- CSS -->
    <txp:css format="link" media="" />
    <!-- ...or you can use (faster) external CSS files e.g. <link rel="stylesheet" href="<txp:page_url type="theme_path" />/styles/default.css"> -->

    <meta name="generator" content="Textpattern CMS">

    <txp:if_author>
        <meta name="robots" content="noindex, follow">
    <txp:else />
        <txp:meta_description />
        <txp:if_article_list>
            <txp:article pgonly="1" limit="10" />
            <txp:variable name="page" value='<txp:page_url type="pg" />' />
            <txp:if_variable name="page" value="1">
                <meta name="robots" content="index, follow">
                <link rel="canonical" href="<txp:section url="1" />">
            <txp:else />
                <meta name="robots" content="noindex, follow">
                <link rel="canonical" href="<txp:section url="1" />?pg=<txp:page_url type="pg" />">
            </txp:if_variable>
        <txp:else />
            <txp:meta_keywords separator="," />
            <txp:meta_author title="1" />
            <meta name="robots" content="<txp:if_expires>unavailable_after: <txp:expires gmt="1" format="%d-%b-%y %T" /> GMT<txp:else />index, follow</txp:if_expires>">
            <link rel="canonical" href="<txp:permlink />">
        </txp:if_article_list>
    </txp:if_author>

    <!-- content feeds -->
    <txp:feed_link flavor="atom" format="link" label="Atom" />
    <txp:feed_link flavor="rss" format="link" label="RSS" />
</head>

<txp:if_article_list>
    <body class="<txp:section />-page" itemscope itemtype="https://schema.org/CollectionPage">
<txp:else />
    <body class="<txp:section />-page" itemscope itemtype="https://schema.org/WebPage">
</txp:if_article_list>

    <txp:output_form form="body_header" />

    <div class="wrapper">
        <div class="container">

            <!-- Main content -->
            <main aria-label="<txp:text item="main_content" />" itemscope itemtype="https://schema.org/Blog">

                <txp:if_article_list>

                    <h1 itemprop="name">
                        <txp:section title="1" />
                    </h1>
                    <txp:article class="article-list" form="article_listing" limit="10" wraptag="ul" />
                    <!-- ...or if you want to list all articles from all sections instead, then replace txp:article with txp:article_custom -->

                    <!-- add pagination links to foot of article listings if there are more articles available -->
                    <txp:evaluate wraptag="p" class="paginator">
                        <txp:newer rel="prev">
                            <txp:text item="newer" />
                        </txp:newer>

                        <txp:older rel="next">
                            <txp:text item="older" />
                        </txp:older>
                    </txp:evaluate>

                <txp:else />

                    <txp:article />

                    <!-- add pagination links to foot of article if there are more articles available -->
                    <txp:evaluate wraptag="p" class="paginator">
                        <txp:link_to_prev>
                            <txp:text item="prev" />
                        </txp:link_to_prev>

                        <txp:link_to_next>
                            <txp:text item="next" />
                        </txp:link_to_next>
                    </txp:evaluate>

                </txp:if_article_list>

            </main>

            <!-- Complementary content -->
            <aside class="complementary-content">

                <!-- feed links, default flavor is RSS, so we don't need to specify a flavor on the first feed_link -->
                <p>
                    <txp:feed_link class="feed-rss" label="RSS" />
                    /
                    <txp:feed_link class="feed-atom" flavor="atom" label="Atom" />
                </p>

                <!-- if links exist, renders a links list -->
                <txp:evaluate test="linklist">
                    <section>
                        <h4>
                            <txp:text item="links" />
                        </h4>

                        <!-- links by default to form: 'plainlinks.txp' unless you specify a different form -->
                        <txp:linklist wraptag="ul" break="li" />
                    </section>
                </txp:evaluate>

            </aside>

        </div> <!-- /.container -->
    </div> <!-- /.wrapper -->

    <txp:output_form form="body_footer" />

</body>
</html>
